<html>

<body ng-controller="logInCtrl">
    <div class="d-flex align-items-center min-vh-100">
        <div class="container">
            <div class="row text-center  justify-content-center">
                <div class="col-md-6">
                    <img class="mb-4" src="/images/itam.png" alt="" width="150" height="60">
                    <form name="loginForm" ng-submit="submit()">
                        <h1 class="h3 mb-3 font-weight-normal">Inicia sesión</h1>
                        <div class="form-group row">
                            <input type="email" class="form-control" id="email" name="email" ng-model="email"
                                placeholder="Correo" required>
                            <input type="password" class="form-control" id="password" ng-model="password"
                                placeholder="Contraseña">
                        </div>
                        <div class="form-group row">
                            <input type="submit" class="btn btn-md btn-success btn-block" id="submit"
                                ng-disabled="loginForm.email.$error.email || !email || !password" value="Ingresar">
                        </div>
                        <p class="mt-5 mb-3 text-muted">© 2020 - Víctor Cruz</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>